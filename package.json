{
	"name": "remix-muco-stack",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:remix": "remix build",
		"build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
		"dev": "run-p dev:*",
		"dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
		"dev:remix": "cross-env NODE_ENV=development remix watch",
		"dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config  ./build/server.js",
		"format": "prettier --write .",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"setup": "prisma generate && prisma migrate deploy && prisma db seed",
		"start": "cross-env NODE_ENV=production node ./build/server.js",
		"test": "vitest",
		"pretest:e2e:run": "npm run build",
		"type-check": "tsc -b",
		"validate": "run-p \"test -- --run\" lint typecheck",
		"prepare": "husky install",
		"commit": "git-cz"
	},
	"prettier": {
		"tabWidth": 2,
		"printWidth": 80,
		"semi": false,
		"useTabs": true,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"singleAttributePerLine": false,
		"arrowParens": "always",
		"trailingComma": "all"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build"
	],
	"dependencies": {
		"@chakra-ui/react": "^2.3.4",
		"@emotion/react": "^11.10.4",
		"@emotion/styled": "^11.10.4",
		"@prisma/client": "^4.3.1",
		"@remix-run/node": "^1.7.2",
		"@remix-run/react": "^1.7.2",
		"@remix-run/serve": "^1.7.2",
		"compression": "^1.7.4",
		"express": "^4.18.1",
		"framer-motion": "^7.3.6",
		"isbot": "^3.5.4",
		"morgan": "^1.10.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tiny-invariant": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@commitlint/prompt": "^17.1.2",
		"@remix-run/dev": "^1.7.2",
		"@remix-run/eslint-config": "^1.7.2",
		"@testing-library/dom": "^8.18.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/compression": "^1.7.2",
		"@types/eslint": "^8.4.6",
		"@types/express": "^4.17.14",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.7.19",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.1.0",
		"@vitest/coverage-c8": "^0.24.1",
		"autoprefixer": "^10.4.12",
		"binode": "^1.0.5",
		"c8": "^7.12.0",
		"commitizen": "^4.2.5",
		"cross-env": "^7.0.3",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"happy-dom": "^6.0.4",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"prisma": "^4.3.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.3",
		"vite-tsconfig-paths": "^3.5.0",
		"vitest": "^0.23.4"
	},
	"engines": {
		"node": ">=14"
	},
	"prisma": {
		"seed": "ts-node --require tsconfig-paths/register prisma/seed.ts",
		"schema": "app/database/schema.prisma"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	}
}
