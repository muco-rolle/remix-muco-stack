{
	"name": "remix-muco-stack",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:remix": "cross-env NODE_ENV=development binode  -- @remix-run/dev:remix dev",
		"setup": "run-s setup:db setup:seed",
		"setup:db": "prisma generate && prisma migrate deploy",
		"setup:seed": "prisma db seed",
		"start": "remix-serve build",
		"format": "prettier --write .",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"test": "vitest",
		"test:cov": "vitest --coverage",
		"type-check": "tsc -b",
		"validate": "run-p \"test -- --run\" lint type-check",
		"commit": "git-cz"
	},
	"prettier": {
		"tabWidth": 2,
		"printWidth": 80,
		"semi": false,
		"useTabs": true,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"singleAttributePerLine": false,
		"arrowParens": "always",
		"trailingComma": "all"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build"
	],
	"dependencies": {
		"@prisma/client": "^4.2.1",
		"@remix-run/node": "^1.7.1",
		"@remix-run/react": "^1.7.1",
		"@remix-run/serve": "^1.7.1",
		"isbot": "^3.5.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tiny-invariant": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@commitlint/prompt": "^17.1.2",
		"@remix-run/dev": "^1.7.1",
		"@remix-run/eslint-config": "^1.7.1",
		"@testing-library/dom": "^8.17.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/eslint": "^8.4.6",
		"@types/node": "^18.7.13",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.0.1",
		"@vitest/coverage-c8": "^0.23.2",
		"autoprefixer": "^10.4.8",
		"binode": "^1.0.5",
		"c8": "^7.12.0",
		"commitizen": "^4.2.5",
		"cross-env": "^7.0.3",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"happy-dom": "^6.0.4",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"prisma": "^4.2.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.9",
		"vite-tsconfig-paths": "^3.5.0",
		"vitest": "^0.23.2"
	},
	"engines": {
		"node": ">=14"
	},
	"prisma": {
		"seed": "ts-node --require tsconfig-paths/register prisma/seed.ts",
		"schema": "app/database/schema.prisma"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	}
}
